<h1 class="text-center mt-3">CADASTRO</h1>
<div class="text-center">
  <%= link_to "VOLTAR", forms_path, class: "btn btn-ghost" %>
</div>
<div class="card mt-3 p-5">
  <h3 class="text-center m-3"><%= @form.name %></h3>
  <label><strong>Telefone:</strong></label>
  <p class="card-body"><%= @form.phone %></p>
  <label><strong>Endereço:</strong></label>
  <p class="card-body"><%= @form.prefecture %></p>
  <p class="card-body"><%= @form.address %></p>
  <label><strong>Email:</strong></label>
  <p class="card-body"><%= @form.email %></p>
  <label><strong>Nihongo:</strong></label>
  <p class="card-body"><%= @form.nihongo %></p>
  <label><strong>Preferência de Turno:</strong></label>
  <p class="card-body"><%= @form.turn %></p>
  <label><strong>Habilitação:</strong></label>
  <p class="card-body"><%= @form.driver ? "Possui Carteira de Motorista" : "Não possui Carteira de Motorista" %></p>
  <label><strong>Outras habilitações:</strong></label>
  <p class="card-body"><%= @form.licences %></p>
  <label><strong>Passaporte:</strong></label>
  <p class="card-body"><%= @form.passport %></p>
  <label><strong>My Number:</strong></label>
  <p class="card-body"><%= @form.my_number %></p>
  <label><strong>Experiência anterior:</strong></label>
  <p class="card-body"><%= @form.previous_job %></p>
  <label><strong>Que tipo de trabalho você procura?:</strong></label>
  <p class="card-body"><%= @form.job_kind %></p>
  <label><strong>Observações:</strong></label>
  <p class="card-body"><%= @form.observations %></p>
  <label><strong>Imagens:</strong></label>
  <div class="d-flex justify-content-between">
  <% @form.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  </div>
</div>
